<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZooTubeApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/income_color1</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorWhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/income_color2</item>
        <item name="colorSecondaryVariant">@color/income_color2</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="Widget.AppCompat.Toolbar">
        <!-- Support library compatibility -->
        <item name="contentInsetStart">0dp</item>
        <item name="android:padding">0dp</item>
        <!--<item name="background">@android:color/transparent</item>-->
    </style>
</resources>